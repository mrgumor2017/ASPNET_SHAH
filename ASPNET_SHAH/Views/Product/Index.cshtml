@model IEnumerable<Product>

<div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 15px;">
    <h1>Список продуктів</h1>
    <a class="btn btn-dark" asp-action="Create">Додати продукт</a>
</div>

@if (Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th style="width: 5%;">ID</th>
                <th style="width: 15%;">Зображення</th>
                <th style="width: 20%;">Назва</th>
                <th style="width: 30%;">Опис</th>
                <th style="width: 10%;">Ціна</th>
                <th style="width: 10%;">Кількість</th>
                <th style="width: 20%;">Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>
                        @if (!string.IsNullOrEmpty(product.Image))
                        {
                            <img src="@product.Image" alt="Зображення @product.Name" style="width: 100px; height: 100px; object-fit: cover; border-radius: 5px; border: 1px solid #ccc;">
                        }
                        else
                        {
                            <span>Немає зображення</span>
                        }
                    </td>
                    <td>@product.Name</td>
                    <td style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 250px;">
                        @product.Description
                    </td>
                    <td>@product.Price.ToString("0.00") грн</td>
                    <td>@product.Amount</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@product.Id">Редагувати</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@product.Id">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 style="text-align: center; margin-top: 20px;">Продуктів не знайдено</h2>
}
