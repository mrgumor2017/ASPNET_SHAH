@using ASPNET_SHAH.ViewModels
@model CreateProductVM

<div style="width: 40%; margin: 0px auto; background-color: lightgoldenrodyellow; border-radius: 5px; padding: 10px; border: 2px solid black;">
    <h1 style="text-align: center;">Редагування товару</h1>
    <form asp-action="Edit" enctype="multipart/form-data" method="post" style="padding: 15px;">
        <input type="hidden" asp-for="Product.Id" />

        <div class="form-group">
            <label for="name">Назва</label>
            <input asp-for="Product.Name" type="text" class="form-control">
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="description">Опис</label>
            <input asp-for="Product.Description" type="text" class="form-control">
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="price">Ціна</label>
            <input asp-for="Product.Price" type="number" class="form-control">
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="amount">Кількість</label>
            <input asp-for="Product.Amount" type="number" class="form-control">
            <span asp-validation-for="Product.Amount" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="category">Категорія</label>
            <select class="form-select" asp-for="Product.CategoryId" asp-items="@Model.Categories"></select>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Поточне зображення</label>
            @if (!string.IsNullOrEmpty(Model.Product.Image))
            {
                <div>
                    <img src="~/images/products/@Model.Product.Image" alt="Image" style="max-width: 100px; border: 1px solid black;">
                </div>
            }
        </div>

        <div class="form-group">
            <label for="image">Нове зображення</label>
            <input asp-for="File" type="file" class="form-control">
            <span asp-validation-for="File" class="text-danger"></span>
        </div>

        <div style="text-align: center; padding-top: 10px;">
            <input type="submit" value="Зберегти" class="btn btn-success" />
            <a class="btn btn-dark" asp-action="Index">Повернутися</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
